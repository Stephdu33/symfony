{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
	<div class="media">
		<div class="media-body">
			<h1 class="mt-0">Saison
				{{ season.number }}
				de
				{{ program.title }}:</h1>
			<p>{{ season.description }}</p>

			<h2>Liste des épisodes:
			</h2>
			<ul>
				{% for episode in season.episodes %}
					<li>Episode
						<a href="{{ path('program_episode_show', { 'program':program.id, 'season':season.id, 'episode':episode.id }) }}">
							Numéro et titre épisode:
							{{ episode.number }}:
							{{ episode.title }}</a>
					</li>
				{% endfor %}
			</ul>
		</div>
	</div>
{% endblock %}
